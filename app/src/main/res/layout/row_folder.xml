<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/card_album"
    app:cardCornerRadius="@dimen/margin10"
    app:cardElevation="@dimen/margin10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/colorBlackDark3">

    <RelativeLayout
        android:id="@+id/relative_album"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackDark3">

        <ImageView
            android:id="@+id/iv_cover_folder"
            android:layout_width="@dimen/margin50"
            android:layout_height="@dimen/margin50"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin4"
            android:src="@drawable/ic_baseline_folder" />

        <TextView
            android:id="@+id/txt_folder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin14"
            android:layout_marginTop="@dimen/margin10"
            android:layout_toEndOf="@id/iv_cover_folder"
            android:padding="@dimen/margin4"
            android:singleLine="true"
            android:text="@string/folders"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_folder_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_folder_name"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin14"
            android:layout_toEndOf="@id/iv_cover_folder"
            android:padding="@dimen/margin4"
            android:singleLine="true"
            android:text="path"
            android:textSize="10sp"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>